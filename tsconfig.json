{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "noUnusedLocals": true,
      "allowJs": true,    "esModuleInterop": true,
      "isolatedModules": true,
      "lib": ["es6"],
      "noEmit": true,
    },
    "exclude": [
      "node_modules"
    ]
  }